{
  "name": "@nobody/web-ext-deno",
  "version": "0.2.0",
  "exports": {
    ".": "./mod.ts",
    "./bin": "./bin.ts",
    "./firefox": "./firefox.ts",
    "./chromium": "./chromium.ts",
    "./error": "./error.ts"
  },
  "tasks": {
    "devFirefox": "deno run -A bin.ts --run --sourceDir=./example/firefox --browser=firefox --port 8080",
    "devChromium": "deno run -A bin.ts --run --sourceDir=./example/chrome --browser=chrome --port 8080"
  },
  "license": "MIT",
  "imports": {
    "@nobody/firefox-profile-deno": "jsr:@nobody/firefox-profile-deno@^0.3.0",
    "@std/assert": "jsr:@std/assert@1",
    "@std/async": "jsr:@std/async@^1.0.9",
    "@std/cli": "jsr:@std/cli@^1.0.10",
    "@std/fmt": "jsr:@std/fmt@^1.0.4",
    "@std/fs": "jsr:@std/fs@^1.0.9",
    "@std/log": "jsr:@std/log@^0.224.13",
    "@std/path": "jsr:@std/path@^1.0.8",
    "@zip-js/zip-js": "jsr:@zip-js/zip-js@^2.7.54"
  },
  "lint": {
    "exclude": [
      "example"
    ]
  },
  "fmt": {
    "exclude": [
      "example"
    ]
  }
}
